{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2019",
		"lib": [
			"es2020",
			"DOM",
		],
		"rootDir": "./src",
		"outDir": "./",
		"moduleResolution": "node",
		"sourceRoot": "./src",
		"types": [
			"node"
		],
		"declaration": true,
		"removeComments": false,
		"inlineSources": true,
		"inlineSourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"importHelpers": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"/*.js",
		"/*.d.ts",
		"node_modules/*"
	]
}